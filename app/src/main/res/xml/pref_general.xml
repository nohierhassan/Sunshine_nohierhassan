<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width = "match_parent"
    android:layout_height = "match_parent"

    >


     <EditTextPreference
     android:title="@string/locatoin_pref_titel"
         android:key="@string/location_pref_key"
         android:defaultValue="@string/locatoin_pref_default_value"
         android:inputType="text"
         android:singleLine="true" />

     <ListPreference
         android:title = "@string/temp_pref_title"
         android:key = "@string/temp_pref_key"
         android:defaultValue = "@string/temp_pref_default_value"
         android:entries="@array/temp_pref_label"
         android:entryValues="@array/temp_pref_values"




         />
</PreferenceScreen>